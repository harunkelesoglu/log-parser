{
  "compilerOptions": {
    "target": "ES2017",                      
    "module": "commonjs",                                     
    "moduleResolution": "Node",         
    "resolveJsonModule": true,
    "rootDir": ".",   
    "outDir": "dist",                      
    "esModuleInterop": true,                 
    "forceConsistentCasingInFileNames": true,
    "strict": true,                          
    "skipLibCheck": true                
  },
  "include": [
    ".",
    "src/**/*",
    "package.json"
 ],
  "exclude": [
    "dist",
    "node_modules",
    "*.config.ts",
    "src/**/*.spec.ts"
  ]
}
